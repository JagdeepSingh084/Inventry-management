    public static void main(String args[]) {
     progress myprogress=new progress();
     myprogress.setVisible(true);
     try{
         for(int i=0;i<=100;i++)
         {
             Thread.sleep(10);
             myprogress.mprogress.setValue(i);
             myprogress.percentage.setText(Integer.valueOf(i)+"%");
         }
     }catch(Exception e)
     {
         
     }
     new login().setVisible(true);
     myprogress.dispose();
