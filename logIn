    private void jButton1MouseClicked(java.awt.event.MouseEvent evt) {                                      
        String query="select * from usertbl where uname='"+uidtb.getText()+"'and upass ='"+passwordtb.getText()+"'";
         try{
            Class.forName("com.mysql.jdbc.Driver");
        }
        catch(ClassNotFoundException e)
        {
            System.out.println("not found");
        }

        try{
             con=DriverManager.getConnection("jdbc:mysql://localhost:3306/db","root","ansh@#16V");
             st=con.createStatement();
             rs=st.executeQuery(query);
            if(rs.next())
            {
                new home().setVisible(true);
                this.dispose();
            }
            else{
                JOptionPane.showMessageDialog(this,"Incorrect User Name And Password");
            }
        }catch(Exception e)
        {
            e.printStackTrace();
        }
    }                                     

